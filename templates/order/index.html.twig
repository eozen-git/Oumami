{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block main %}
    <div class="header col-9 mx-auto">
        <h1 class="text-center mt-5">Prise de commande</h1>
    </div>
    {{ form_start(form) }}
    <section class="order container">
        <div class="container row row-cols-1 row-cols-lg-2 mt-5 mx-auto justify-content-lg-between justify-content-center">
            {% for orderDetail in form.orderDetails %}
                <div class="card mb-3 mx-3">
                    <div class="card-body my-auto">
                        <h5 class="text-center">{{ orderDetail.vars.data.food.name }}</h5>
                    </div>
                    <img class="card-img-top" src="build/images/{{ orderDetail.vars.data.food.image }}"
                         alt="{{ orderDetail.vars.data.food.name }}">
                    <div class="card-footer">
                        <div class="d-flex justify-content-between card-bottom my-3">
                            <p class="card-text ml-3 align-self-center my-auto">{{ orderDetail.vars.data.food.price }}
                                €</p>
                            <span class="mr-3 my-auto">{{ form_widget(orderDetail) }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    <div class="container d-flex justify-content-lg-start justify-content-center mx-auto mt-4 px-4">
        <button class="btn btn-primary ml-4">{{ button_label|default('Enregistrer') }}</button>
    </div>
    {{ form_end(form) }}
{% endblock %}

