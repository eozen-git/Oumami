{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block main %}
    <div class="header col-9 mx-auto">
        <h1 class="text-center mt-5">Prise de commande</h1>
    </div>
    <section class="order">
        <div class="container mt-5">
            {{ form_start(form) }}
            {% for orderDetail in form.orderDetails %}
                <div class="card mr-3 mb-3">
                    <img class="card-img-top" src="build/images/{{ orderDetail.vars.data.food.image }}"
                         alt="Card image cap">
                    <div class="card-body">
                        <h5>{{ orderDetail.vars.data.food.name }}</h5>
                        <div class="row">
                            <p class="card-text">{{ orderDetail.vars.data.food.price }} €</p>
                            {{ form_widget(orderDetail) }}
                        </div>
                    </div>
                </div>
            {% endfor %}
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

